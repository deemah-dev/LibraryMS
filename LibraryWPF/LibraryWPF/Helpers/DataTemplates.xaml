<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:LibraryWPF.ViewModels"
                    xmlns:view="clr-namespace:LibraryWPF.Views">
    <DataTemplate DataType="{x:Type vm:LoginViewModel}">
        <view:LoginView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:MainViewModel}">
        <view:MainView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:BooksCategoriesVM}">
        <view:BooksCategoriesView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:BooksVM}">
        <view:BooksView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:BorrowBookVM}">
        <view:BorrowBookView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:ReturnBookVM}">
        <view:ReturnBookView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:UsersVM}">
        <view:UsersView />
    </DataTemplate>
</ResourceDictionary>