<UserControl x:Class="LibraryWPF.Views.BooksCategoriesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FontFamily="Microsoft Sans Serif"
             Background="Transparent"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <UserControl.Resources>

        <SolidColorBrush x:Key="PrimaryBrush"      Color="#006064"/>
        <SolidColorBrush x:Key="PrimaryLightBrush" Color="#00838F"/>
        <SolidColorBrush x:Key="AccentBrush"       Color="#00ACC1"/>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- ── Search Box ── -->
        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Height"          Value="36"/>
            <Setter Property="FontFamily"      Value="Microsoft Sans Serif"/>
            <Setter Property="FontSize"        Value="12"/>
            <Setter Property="Foreground"      Value="#37474F"/>
            <Setter Property="Background"      Value="White"/>
            <Setter Property="BorderBrush"     Value="#CFD8DC"/>
            <Setter Property="BorderThickness" Value="1.2"/>
            <Setter Property="Padding"         Value="10,0,10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#006064"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ── Primary Button ── -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height"          Value="36"/>
            <Setter Property="Background"      Value="#006064"/>
            <Setter Property="Foreground"      Value="White"/>
            <Setter Property="FontFamily"      Value="Microsoft Sans Serif"/>
            <Setter Property="FontSize"        Value="12"/>
            <Setter Property="FontWeight"      Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="18,0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#00838F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#004D40"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ── Context Action Button ── -->
        <Style x:Key="ContextActionButton" TargetType="Button">
            <Setter Property="Height"          Value="34"/>
            <Setter Property="MinWidth"        Value="130"/>
            <Setter Property="Background"      Value="White"/>
            <Setter Property="Foreground"      Value="#37474F"/>
            <Setter Property="FontFamily"      Value="Microsoft Sans Serif"/>
            <Setter Property="FontSize"        Value="11.5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="12,0">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#E0F7FA"/>
                                <Setter Property="Foreground" Value="#006064"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#B2EBF2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ── DataGrid Column Header ── -->
        <Style x:Key="DGColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background"      Value="#006064"/>
            <Setter Property="Foreground"      Value="White"/>
            <Setter Property="FontFamily"      Value="Microsoft Sans Serif"/>
            <Setter Property="FontSize"        Value="12"/>
            <Setter Property="FontWeight"      Value="Bold"/>
            <Setter Property="Height"          Value="42"/>
            <Setter Property="Padding"         Value="14,0"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush"     Value="#00838F"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridColumnHeader">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ── DataGrid Row ── -->
        <Style x:Key="DGRow" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontFamily" Value="Microsoft Sans Serif"/>
            <Setter Property="FontSize"   Value="12"/>
            <Setter Property="Foreground" Value="#37474F"/>
            <Setter Property="Height"     Value="44"/>
            <Setter Property="Cursor"     Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0F7FA"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#B2EBF2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ── DataGrid Cell ── -->
        <Style x:Key="DGCell" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding"         Value="14,0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#006064"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ── Close Button ── -->
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Width"           Value="28"/>
            <Setter Property="Height"          Value="28"/>
            <Setter Property="Background"      Value="Transparent"/>
            <Setter Property="Foreground"      Value="#90A4AE"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Setter Property="FontSize"        Value="14"/>
            <Setter Property="FontWeight"      Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#FFEBEE"/>
                                <Setter Property="Foreground" Value="#EF5350"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <!-- ═══════════════════════════════════════════════════════ -->
    <Grid>
        <Grid.RowDefinitions>
            <!-- Stats Cards -->
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="Auto"/>
            <!-- DataGrid -->
            <RowDefinition Height="*"/>
            <!-- Action Panel -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ════════════════════════════════
             ROW 0 — Stats Cards (2 cards)
             ════════════════════════════════ -->
        <UniformGrid Grid.Row="0" Columns="2" Margin="0,0,0,16">

            <!-- Total Categories -->
            <Border Background="White" CornerRadius="12"
                    Margin="0,0,10,0" Padding="18,14">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.07" Color="Black"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Total Categories" FontSize="11" Foreground="#90A4AE"/>
                        <TextBlock Text="{Binding TotalCategories}"
                                   FontSize="26" FontWeight="Bold"
                                   Foreground="#006064" Margin="0,2,0,0"/>
                    </StackPanel>
                    <Border Grid.Column="1" Width="42" Height="42"
                            CornerRadius="10" Background="#E0F7FA">
                        <Path Data="M4,6 L4,20 C4,21.1 4.9,22 6,22 L18,22 C19.1,22 20,21.1 20,20 L20,8 L14,2 L6,2 C4.9,2 4,2.9 4,4 Z M13,9 L13,3.5 L18.5,9 L13,9 Z"
                              Fill="#006064" Width="20" Height="20" Stretch="Uniform"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Total Books -->
            <Border Background="White" CornerRadius="12"
                    Margin="10,0,0,0" Padding="18,14">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.07" Color="Black"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Total Books" FontSize="11" Foreground="#90A4AE"/>
                        <TextBlock Text="{Binding TotalBooks}"
                                   FontSize="26" FontWeight="Bold"
                                   Foreground="#00838F" Margin="0,2,0,0"/>
                    </StackPanel>
                    <Border Grid.Column="1" Width="42" Height="42"
                            CornerRadius="10" Background="#E0F7FA">
                        <Path Data="M18,2 L6,2 C4.9,2 4,2.9 4,4 L4,20 C4,21.1 4.9,22 6,22 L18,22 C19.1,22 20,21.1 20,20 L20,4 C20,2.9 19.1,2 18,2 Z"
                              Fill="#00838F" Width="20" Height="20" Stretch="Uniform"/>
                    </Border>
                </Grid>
            </Border>

        </UniformGrid>

        <!-- ════════════════════════════════
             ROW 1 — Toolbar
             ════════════════════════════════ -->
        <Border Grid.Row="1"
                Background="White" CornerRadius="12"
                Padding="16,12" Margin="0,0,0,12">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.07" Color="Black"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search -->
                <Grid Grid.Column="0" MaxWidth="380" HorizontalAlignment="Left">
                    <TextBox Style="{StaticResource SearchBox}"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Padding="38,0,10,0"/>
                    <Path Data="M15.5,14 L14.71,14 L14.43,13.73 C15.41,12.59 16,11.11 16,9.5 C16,5.91 13.09,3 9.5,3 C5.91,3 3,5.91 3,9.5 C3,13.09 5.91,16 9.5,16 C11.11,16 12.59,15.41 13.73,14.43 L14,14.71 L14,15.5 L19,20.49 L20.49,19 L15.5,14 Z M9.5,14 C7.01,14 5,11.99 5,9.5 C5,7.01 7.01,5 9.5,5 C11.99,5 14,7.01 14,9.5 C14,11.99 11.99,14 9.5,14 Z"
                          Fill="#90A4AE" Width="14" Height="14" Stretch="Uniform"
                          HorizontalAlignment="Left" VerticalAlignment="Center"
                          Margin="12,0,0,0" IsHitTestVisible="False"/>
                </Grid>

                <!-- Add Category -->
                <Button Grid.Column="1"
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding AddCategoryCommand}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                        <Path Data="M19,13 L13,13 L13,19 L11,19 L11,13 L5,13 L5,11 L11,11 L11,5 L13,5 L13,11 L19,11 L19,13 Z"
                              Fill="White" Width="14" Height="14" Stretch="Uniform"
                              Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Add Category" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- ════════════════════════════════
             ROW 2 — DataGrid
             ════════════════════════════════ -->
        <Border Grid.Row="2"
                Background="White" CornerRadius="12"
                ClipToBounds="True">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.07" Color="Black"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Table Header Bar -->
                <Border Grid.Row="0"
                        Background="#006064"
                        CornerRadius="12,12,0,0"
                        Padding="18,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="Book Categories"
                                   FontFamily="Microsoft Sans Serif"
                                   FontSize="13" FontWeight="Bold"
                                   Foreground="White" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding FilteredCount, StringFormat='{}{0} records'}"
                                   FontFamily="Microsoft Sans Serif"
                                   FontSize="11" Foreground="#B2EBF2"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding FilteredCategories}"
                          SelectedItem="{Binding SelectedCategory}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="False"
                          CanUserResizeRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#F0F0F0"
                          BorderThickness="0"
                          Background="White"
                          RowBackground="White"
                          AlternatingRowBackground="#FAFFFE"
                          ColumnHeaderStyle="{StaticResource DGColumnHeader}"
                          RowStyle="{StaticResource DGRow}"
                          CellStyle="{StaticResource DGCell}"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          FontFamily="Microsoft Sans Serif">

                    <DataGrid.Columns>

                        <!-- ID -->
                        <DataGridTextColumn Header="  ID"
                                            Binding="{Binding CategoryId}"
                                            Width="70" FontSize="12"/>

                        <!-- Category Name -->
                        <DataGridTextColumn Header="Category Name"
                                            Binding="{Binding CategoryName}"
                                            Width="*" FontSize="12"/>

                        <!-- Book Count Badge -->
                        <DataGridTemplateColumn Header="Books Count" Width="130">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="#E0F7FA" CornerRadius="12"
                                            Padding="10,4" HorizontalAlignment="Left" Margin="14,0">
                                        <TextBlock Text="{Binding BookCount}"
                                                   FontFamily="Microsoft Sans Serif"
                                                   FontSize="11.5" FontWeight="Bold"
                                                   Foreground="#006064" HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Options Column -->
                        <DataGridTemplateColumn Header="Actions" Width="130">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Background="Transparent" BorderThickness="0"
                                            Cursor="Hand" Focusable="False"
                                            Command="{Binding DataContext.SelectCategoryCommand,
                                                      RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="bg" Background="Transparent"
                                                        CornerRadius="6" Padding="8,4"
                                                        HorizontalAlignment="Left" Margin="14,0">
                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                        <Path Data="M12,8 C10.9,8 10,8.9 10,10 C10,11.1 10.9,12 12,12 C13.1,12 14,11.1 14,10 C14,8.9 13.1,8 12,8 Z M12,14 C10.9,14 10,14.9 10,16 C10,17.1 10.9,18 12,18 C13.1,18 14,17.1 14,16 C14,14.9 13.1,14 12,14 Z M12,2 C10.9,2 10,2.9 10,4 C10,5.1 10.9,6 12,6 C13.1,6 14,5.1 14,4 C14,2.9 13.1,2 12,2 Z"
                                                              Fill="#90A4AE" Width="14" Height="14"
                                                              Stretch="Uniform" Margin="0,0,6,0"/>
                                                        <TextBlock Text="Options"
                                                                   FontFamily="Microsoft Sans Serif"
                                                                   FontSize="11.5" Foreground="#90A4AE"
                                                                   VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bg" Property="Background" Value="#E0F7FA"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- ════════════════════════════════
             ROW 3 — Action Panel
             يظهر أسفل الجدول عند الضغط على Options
             ════════════════════════════════ -->
        <Border Grid.Row="3"
                Visibility="{Binding IsActionPanelVisible, Converter={StaticResource BoolToVis}}"
                Background="White" CornerRadius="12"
                Margin="0,12,0,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="14" ShadowDepth="3" Opacity="0.10" Color="Black"/>
            </Border.Effect>

            <Grid Margin="18,12">
                <Grid.ColumnDefinitions>
                    <!-- Category Name Badge -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Separator -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Action Buttons -->
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Spacer -->
                    <ColumnDefinition Width="*"/>
                    <!-- Close -->
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Selected Category Badge -->
                <Border Grid.Column="0"
                        Background="#006064" CornerRadius="6"
                        Padding="12,6" Margin="0,0,14,0">
                    <TextBlock Text="{Binding SelectedCategory.CategoryName}"
                               FontFamily="Microsoft Sans Serif"
                               FontSize="12" FontWeight="Bold"
                               Foreground="White" VerticalAlignment="Center"/>
                </Border>

                <!-- Divider -->
                <Rectangle Grid.Column="1"
                           Width="1" Fill="#E0E0E0" Margin="0,4,14,4"/>

                <!-- ① View Books -->
                <Button Grid.Column="2"
                        Style="{StaticResource ContextActionButton}"
                        Command="{Binding ViewCategoryBooksCommand}"
                        Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Path Data="M18,2 L6,2 C4.9,2 4,2.9 4,4 L4,20 C4,21.1 4.9,22 6,22 L18,22 C19.1,22 20,21.1 20,20 L20,4 C20,2.9 19.1,2 18,2 Z M9,4 L10.5,4 L10.5,9 L12,7.5 L13.5,9 L13.5,4 L15,4 L9,4 Z"
                              Fill="#006064" Width="14" Height="14" Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="View Books" VerticalAlignment="Center"
                                   FontFamily="Microsoft Sans Serif"/>
                    </StackPanel>
                </Button>

                <!-- ② Edit Category -->
                <Button Grid.Column="3"
                        Style="{StaticResource ContextActionButton}"
                        Command="{Binding EditCategoryCommand}"
                        Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Path Data="M3,17.25 L3,21 L6.75,21 L17.81,9.94 L14.06,6.19 L3,17.25 Z M20.71,7.04 C21.1,6.65 21.1,6.02 20.71,5.63 L18.37,3.29 C17.98,2.9 17.35,2.9 16.96,3.29 L15.13,5.12 L18.88,8.87 L20.71,7.04 Z"
                              Fill="#00838F" Width="14" Height="14" Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="Edit Category" VerticalAlignment="Center"
                                   FontFamily="Microsoft Sans Serif"/>
                    </StackPanel>
                </Button>

                <!-- ③ Add Book -->
                <Button Grid.Column="4"
                        Style="{StaticResource ContextActionButton}"
                        Command="{Binding AddBookToCategoryCommand}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Path Data="M19,13 L13,13 L13,19 L11,19 L11,13 L5,13 L5,11 L11,11 L11,5 L13,5 L13,11 L19,11 L19,13 Z"
                              Fill="#00ACC1" Width="14" Height="14" Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="Add Book" VerticalAlignment="Center"
                                   FontFamily="Microsoft Sans Serif"/>
                    </StackPanel>
                </Button>

                <!-- Close Panel -->
                <Button Grid.Column="6"
                        Style="{StaticResource CloseButton}"
                        Command="{Binding CloseActionPanelCommand}"
                        Content="✕"/>
            </Grid>
        </Border>

    </Grid>
</UserControl>