        </Border>

        <!-- ════════════════════════════════
             ROW 3 — Action Panel
             ════════════════════════════════ -->
        <Border Grid.Row="3"
                Visibility="{Binding IsActionPanelVisible, Converter={StaticResource BoolToVis}}"
                Background="White" CornerRadius="12"
                Margin="0,12,0,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="14" ShadowDepth="3" Opacity="0.10" Color="Black"/>
            </Border.Effect>

            <Grid Margin="18,12">
                <Grid.ColumnDefinitions>
                    <!-- Book Title Badge -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Divider -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- View Details -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Edit -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Borrow Copy -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Add Book -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Spacer -->
                    <ColumnDefinition Width="*"/>
                    <!-- Close -->
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Selected Book Badge -->
                <Border Grid.Column="0"
                        Background="#006064" CornerRadius="6"
                        Padding="12,6" Margin="0,0,14,0"
                        MaxWidth="200">
                    <TextBlock Text="{Binding SelectedBook.Title}"
                               FontFamily="Microsoft Sans Serif"
                               FontSize="12" FontWeight="Bold"
                               Foreground="White" VerticalAlignment="Center"
                               TextTrimming="CharacterEllipsis"/>
                </Border>

                <!-- Divider -->
                <Rectangle Grid.Column="1"
                           Width="1" Fill="#E0E0E0" Margin="0,4,14,4"/>

                <!-- ① View Details -->
                <Button Grid.Column="2"
                        Style="{StaticResource ContextActionButton}"
                        Command="{Binding ViewBookDetailsCommand}"
                        Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Path Data="M12,4.5 C7,4.5 2.73,7.61 1,12 C2.73,16.39 7,19.5 12,19.5 C17,19.5 21.27,16.39 23,12 C21.27,7.61 17,4.5 12,4.5 Z M12,17 C9.24,17 7,14.76 7,12 C7,9.24 9.24,7 12,7 C14.76,7 17,9.24 17,12 C17,14.76 14.76,17 12,17 Z M12,9 C10.34,9 9,10.34 9,12 C9,13.66 10.34,15 12,15 C13.66,15 15,13.66 15,12 C15,10.34 13.66,9 12,9 Z"
                              Fill="#006064" Width="14" Height="14" Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="View Details" VerticalAlignment="Center"
                                   FontFamily="Microsoft Sans Serif"/>
                    </StackPanel>
                </Button>

                <!-- ② Edit Details -->
                <Button Grid.Column="3"
                        Style="{StaticResource ContextActionButton}"
                        Command="{Binding EditBookCommand}"
                        Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Path Data="M3,17.25 L3,21 L6.75,21 L17.81,9.94 L14.06,6.19 L3,17.25 Z M20.71,7.04 C21.1,6.65 21.1,6.02 20.71,5.63 L18.37,3.29 C17.98,2.9 17.35,2.9 16.96,3.29 L15.13,5.12 L18.88,8.87 L20.71,7.04 Z"
                              Fill="#00838F" Width="14" Height="14" Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="Edit Details" VerticalAlignment="Center"
                                   FontFamily="Microsoft Sans Serif"/>
                    </StackPanel>
                </Button>

                <!-- ③ Borrow Copy -->
                <Button Grid.Column="4"
                        Style="{StaticResource ContextActionButton}"
                        Command="{Binding BorrowCopyCommand}"
                        Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Path Data="M20,6 L4,6 C2.9,6 2,6.9 2,8 L2,20 C2,21.1 2.9,22 4,22 L20,22 C21.1,22 22,21.1 22,20 L22,8 C22,6.9 21.1,6 20,6 Z M20,20 L4,20 L4,10 L20,10 L20,20 Z M16,1 L8,1 L8,3 L16,3 L16,1 Z"
                              Fill="#00ACC1" Width="14" Height="14" Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="Borrow Copy" VerticalAlignment="Center"
                                   FontFamily="Microsoft Sans Serif"/>
                    </StackPanel>
                </Button>

                <!-- ④ Add Copy -->
                <Button Grid.Column="5"
                        Style="{StaticResource ContextActionButton}"
                        Command="{Binding AddCopyCommand}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Path Data="M19,13 L13,13 L13,19 L11,19 L11,13 L5,13 L5,11 L11,11 L11,5 L13,5 L13,11 L19,11 L19,13 Z"
                              Fill="#006064" Width="14" Height="14" Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="Add Copy" VerticalAlignment="Center"
                                   FontFamily="Microsoft Sans Serif"/>
                    </StackPanel>
                </Button>

                <!-- Close -->
                <Button Grid.Column="7"
                        Style="{StaticResource CloseButton}"
                        Command="{Binding CloseActionPanelCommand}"
                        Content="✕"/>
            </Grid>
        </Border>

    </Grid>
</UserControl>