<UserControl x:Class="LibraryWPF.Views.UsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FontFamily="Microsoft Sans Serif"
             Background="Transparent"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <UserControl.Resources>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- ── Role Filter Toggle ── -->
        <Style x:Key="RoleFilterToggle" TargetType="ToggleButton">
            <Setter Property="Height"          Value="36"/>
            <Setter Property="Background"      Value="#F4F6F8"/>
            <Setter Property="Foreground"      Value="#78909C"/>
            <Setter Property="FontFamily"      Value="Microsoft Sans Serif"/>
            <Setter Property="FontSize"        Value="12"/>
            <Setter Property="BorderThickness" Value="1.2"/>
            <Setter Property="BorderBrush"     Value="#CFD8DC"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="bg"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8" Padding="16,0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background"  Value="#E0F7FA"/>
                                <Setter TargetName="bg" Property="BorderBrush" Value="#006064"/>
                                <Setter Property="Foreground" Value="#006064"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bg" Property="Background"  Value="#006064"/>
                                <Setter TargetName="bg" Property="BorderBrush" Value="#006064"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ── Primary Button ── -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height"          Value="36"/>
            <Setter Property="Background"      Value="#006064"/>
            <Setter Property="Foreground"      Value="White"/>
            <Setter Property="FontFamily"      Value="Microsoft Sans Serif"/>
            <Setter Property="FontSize"        Value="12"/>
            <Setter Property="FontWeight"      Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8" Padding="18,0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#00838F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#004D40"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ── Context Action Button ── -->
        <Style x:Key="ContextActionButton" TargetType="Button">
            <Setter Property="Height"          Value="34"/>
            <Setter Property="MinWidth"        Value="110"/>
            <Setter Property="Background"      Value="White"/>
            <Setter Property="Foreground"      Value="#37474F"/>
            <Setter Property="FontFamily"      Value="Microsoft Sans Serif"/>
            <Setter Property="FontSize"        Value="11.5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6" Padding="12,0">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#E0F7FA"/>
                                <Setter Property="Foreground" Value="#006064"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#B2EBF2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ── Delete Action Button ── -->
        <Style x:Key="DeleteActionButton" TargetType="Button">
            <Setter Property="Height"          Value="34"/>
            <Setter Property="MinWidth"        Value="110"/>
            <Setter Property="Background"      Value="White"/>
            <Setter Property="Foreground"      Value="#E53935"/>
            <Setter Property="FontFamily"      Value="Microsoft Sans Serif"/>
            <Setter Property="FontSize"        Value="11.5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6" Padding="12,0">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#FFEBEE"/>
                                <Setter Property="Foreground" Value="#C62828"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#FFCDD2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ── DataGrid Column Header ── -->
        <Style x:Key="DGColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background"      Value="#006064"/>
            <Setter Property="Foreground"      Value="White"/>
            <Setter Property="FontFamily"      Value="Microsoft Sans Serif"/>
            <Setter Property="FontSize"        Value="12"/>
            <Setter Property="FontWeight"      Value="Bold"/>
            <Setter Property="Height"          Value="42"/>
            <Setter Property="Padding"         Value="14,0"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush"     Value="#00838F"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridColumnHeader">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ── DataGrid Row ── -->
        <Style x:Key="DGRow" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontFamily" Value="Microsoft Sans Serif"/>
            <Setter Property="FontSize"   Value="12"/>
            <Setter Property="Foreground" Value="#37474F"/>
            <Setter Property="Height"     Value="52"/>
            <Setter Property="Cursor"     Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0F7FA"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#B2EBF2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ── DataGrid Cell ── -->
        <Style x:Key="DGCell" TargetType="DataGridCell">
            <Setter Property="BorderThickness"  Value="0"/>
            <Setter Property="Padding"          Value="14,0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#006064"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ── Close Button ── -->
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Width"           Value="28"/>
            <Setter Property="Height"          Value="28"/>
            <Setter Property="Background"      Value="Transparent"/>
            <Setter Property="Foreground"      Value="#90A4AE"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Setter Property="FontSize"        Value="13"/>
            <Setter Property="FontWeight"      Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#FFEBEE"/>
                                <Setter Property="Foreground" Value="#EF5350"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <!-- ═══════════════════════════════════════════════════════ -->
    <Grid>
        <Grid.RowDefinitions>
            <!-- Stats -->
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="Auto"/>
            <!-- DataGrid -->
            <RowDefinition Height="*"/>
            <!-- Action Panel -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ════════════════════════════════
             ROW 0 — Stats Cards
             ════════════════════════════════ -->
        <UniformGrid Grid.Row="0" Columns="3" Margin="0,0,0,14">

            <!-- Total Users -->
            <Border Background="White" CornerRadius="12"
                    Margin="0,0,10,0" Padding="16,12">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2"
                                      Opacity="0.07" Color="Black"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Total Users" FontSize="10.5" Foreground="#90A4AE"/>
                        <TextBlock Text="{Binding TotalUsers}"
                                   FontSize="24" FontWeight="Bold"
                                   Foreground="#006064" Margin="0,2,0,0"/>
                    </StackPanel>
                    <Border Grid.Column="1" Width="40" Height="40"
                            CornerRadius="10" Background="#E0F7FA">
                        <Path Data="M16,11 C17.66,11 18.99,9.66 18.99,8 C18.99,6.34 17.66,5 16,5 C14.34,5 13,6.34 13,8 C13,9.66 14.34,11 16,11 Z M8,11 C9.66,11 10.99,9.66 10.99,8 C10.99,6.34 9.66,5 8,5 C6.34,5 5,6.34 5,8 C5,9.66 6.34,11 8,11 Z M8,13 C5.67,13 1,14.17 1,16.5 L1,18 L15,18 L15,16.5 C15,14.17 10.33,13 8,13 Z M16,13 C15.71,13 15.38,13.02 15.03,13.05 C16.19,13.89 17,15.02 17,16.5 L17,18 L23,18 L23,16.5 C23,14.17 18.33,13 16,13 Z"
                              Fill="#006064" Width="20" Height="20" Stretch="Uniform"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Admins -->
            <Border Background="White" CornerRadius="12"
                    Margin="5,0,5,0" Padding="16,12">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2"
                                      Opacity="0.07" Color="Black"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Admins" FontSize="10.5" Foreground="#90A4AE"/>
                        <TextBlock Text="{Binding TotalAdmins}"
                                   FontSize="24" FontWeight="Bold"
                                   Foreground="#00838F" Margin="0,2,0,0"/>
                    </StackPanel>
                    <Border Grid.Column="1" Width="40" Height="40"
                            CornerRadius="10" Background="#E0F7FA">
                        <Path Data="M12,1 L15.09,7.26 L22,8.27 L17,13.14 L18.18,20.02 L12,16.77 L5.82,20.02 L7,13.14 L2,8.27 L8.91,7.26 L12,1 Z"
                              Fill="#00838F" Width="20" Height="20" Stretch="Uniform"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Regular Users -->
            <Border Background="White" CornerRadius="12"
                    Margin="10,0,0,0" Padding="16,12">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2"
                                      Opacity="0.07" Color="Black"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Regular Users" FontSize="10.5" Foreground="#90A4AE"/>
                        <TextBlock Text="{Binding TotalRegularUsers}"
                                   FontSize="24" FontWeight="Bold"
                                   Foreground="#00ACC1" Margin="0,2,0,0"/>
                    </StackPanel>
                    <Border Grid.Column="1" Width="40" Height="40"
                            CornerRadius="10" Background="#E0F7FA">
                        <Path Data="M12,12 C14.21,12 16,10.21 16,8 C16,5.79 14.21,4 12,4 C9.79,4 8,5.79 8,8 C8,10.21 9.79,12 12,12 Z M12,14 C9.33,14 4,15.34 4,18 L4,20 L20,20 L20,18 C20,15.34 14.67,14 12,14 Z"
                              Fill="#00ACC1" Width="20" Height="20" Stretch="Uniform"/>
                    </Border>
                </Grid>
            </Border>

        </UniformGrid>

        <!-- ════════════════════════════════
             ROW 1 — Toolbar
             ════════════════════════════════ -->
        <Border Grid.Row="1"
                Background="White" CornerRadius="12"
                Padding="16,12" Margin="0,0,0,12">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2"
                                  Opacity="0.07" Color="Black"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <!-- Filter Label -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- All Toggle -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Admin Toggle -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- User Toggle -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Divider -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Records count -->
                    <ColumnDefinition Width="*"/>
                    <!-- Add User Button -->
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Label -->
                <TextBlock Grid.Column="0"
                           Text="Filter by role:"
                           FontFamily="Microsoft Sans Serif"
                           FontSize="12" Foreground="#78909C"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>

                <!-- All -->
                <ToggleButton Grid.Column="1"
                              Style="{StaticResource RoleFilterToggle}"
                              IsChecked="{Binding FilterAll}"
                              Margin="0,0,6,0">
                    <StackPanel Orientation="Horizontal" Margin="14,0">
                        <Path Data="M16,11 C17.66,11 18.99,9.66 18.99,8 C18.99,6.34 17.66,5 16,5 C14.34,5 13,6.34 13,8 C13,9.66 14.34,11 16,11 Z M8,11 C9.66,11 10.99,9.66 10.99,8 C10.99,6.34 9.66,5 8,5 C6.34,5 5,6.34 5,8 C5,9.66 6.34,11 8,11 Z M8,13 C5.67,13 1,14.17 1,16.5 L1,18 L15,18 L15,16.5 C15,14.17 10.33,13 8,13 Z M16,13 C15.71,13 15.38,13.02 15.03,13.05 C16.19,13.89 17,15.02 17,16.5 L17,18 L23,18 L23,16.5 C23,14.17 18.33,13 16,13 Z"
                              Fill="{Binding Foreground,
                                     RelativeSource={RelativeSource AncestorType=ToggleButton}}"
                              Width="13" Height="13" Stretch="Uniform"
                              Margin="0,0,7,0" VerticalAlignment="Center"/>
                        <TextBlock Text="All" VerticalAlignment="Center"
                                   FontFamily="Microsoft Sans Serif"/>
                    </StackPanel>
                </ToggleButton>

                <!-- Admin -->
                <ToggleButton Grid.Column="2"
                              Style="{StaticResource RoleFilterToggle}"
                              IsChecked="{Binding FilterAdmin}"
                              Margin="0,0,6,0">
                    <StackPanel Orientation="Horizontal" Margin="14,0">
                        <Path Data="M12,1 L15.09,7.26 L22,8.27 L17,13.14 L18.18,20.02 L12,16.77 L5.82,20.02 L7,13.14 L2,8.27 L8.91,7.26 L12,1 Z"
                              Fill="{Binding Foreground,
                                     RelativeSource={RelativeSource AncestorType=ToggleButton}}"
                              Width="13" Height="13" Stretch="Uniform"
                              Margin="0,0,7,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Admin" VerticalAlignment="Center"
                                   FontFamily="Microsoft Sans Serif"/>
                    </StackPanel>
                </ToggleButton>

                <!-- User -->
                <ToggleButton Grid.Column="3"
                              Style="{StaticResource RoleFilterToggle}"
                              IsChecked="{Binding FilterUser}"
                              Margin="0,0,0,0">
                    <StackPanel Orientation="Horizontal" Margin="14,0">
                        <Path Data="M12,12 C14.21,12 16,10.21 16,8 C16,5.79 14.21,4 12,4 C9.79,4 8,5.79 8,8 C8,10.21 9.79,12 12,12 Z M12,14 C9.33,14 4,15.34 4,18 L4,20 L20,20 L20,18 C20,15.34 14.67,14 12,14 Z"
                              Fill="{Binding Foreground,
                                     RelativeSource={RelativeSource AncestorType=ToggleButton}}"
                              Width="13" Height="13" Stretch="Uniform"
                              Margin="0,0,7,0" VerticalAlignment="Center"/>
                        <TextBlock Text="User" VerticalAlignment="Center"
                                   FontFamily="Microsoft Sans Serif"/>
                    </StackPanel>
                </ToggleButton>

                <!-- Vertical Divider -->
                <Rectangle Grid.Column="4"
                           Width="1" Fill="#E0E0E0"
                           Margin="16,6,16,6"/>

                <!-- Records Count -->
                <TextBlock Grid.Column="5"
                           Text="{Binding FilteredCount, StringFormat='{}{0} records'}"
                           FontFamily="Microsoft Sans Serif"
                           FontSize="11" Foreground="#90A4AE"
                           VerticalAlignment="Center"/>

                <!-- Add User -->
                <Button Grid.Column="6"
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding AddUserCommand}">
                    <StackPanel Orientation="Horizontal" Margin="16,0">
                        <Path Data="M15,12 C17.21,12 19,10.21 19,8 C19,5.79 17.21,4 15,4 C12.79,4 11,5.79 11,8 C11,10.21 12.79,12 15,12 Z M6,10 L6,7 L4,7 L4,10 L1,10 L1,12 L4,12 L4,15 L6,15 L6,12 L9,12 L9,10 L6,10 Z M15,14 C12.33,14 7,15.34 7,18 L7,20 L23,20 L23,18 C23,15.34 17.67,14 15,14 Z"
                              Fill="White" Width="16" Height="16"
                              Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="Add User" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

            </Grid>
        </Border>

        <!-- ════════════════════════════════
             ROW 2 — DataGrid
             ════════════════════════════════ -->
        <Border Grid.Row="2"
                Background="White" CornerRadius="12"
                ClipToBounds="True">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2"
                                  Opacity="0.07" Color="Black"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Table Header Bar -->
                <Border Grid.Row="0"
                        Background="#006064"
                        CornerRadius="12,12,0,0"
                        Padding="18,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="System Users"
                                   FontFamily="Microsoft Sans Serif"
                                   FontSize="13" FontWeight="Bold"
                                   Foreground="White" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding FilteredCount, StringFormat='{}{0} records'}"
                                   FontFamily="Microsoft Sans Serif"
                                   FontSize="11" Foreground="#B2EBF2"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding FilteredUsers}"
                          SelectedItem="{Binding SelectedUser}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="False"
                          CanUserResizeRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#F0F0F0"
                          BorderThickness="0"
                          Background="White"
                          RowBackground="White"
                          AlternatingRowBackground="#FAFFFE"
                          ColumnHeaderStyle="{StaticResource DGColumnHeader}"
                          RowStyle="{StaticResource DGRow}"
                          CellStyle="{StaticResource DGCell}"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          FontFamily="Microsoft Sans Serif">

                    <DataGrid.Columns>

                        <!-- ID -->
                        <DataGridTextColumn Header=" ID"
                                            Binding="{Binding UserId}"
                                            Width="70"/>

                        <!-- Avatar + Username -->
                        <DataGridTemplateColumn Header="Username" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal"
                                                VerticalAlignment="Center"
                                                Margin="2,0">
                                        <!-- Avatar Circle -->
                                        <Border Width="32" Height="32"
                                                CornerRadius="16"
                                                Background="#00ACC1"
                                                Margin="0,0,10,0">
                                            <TextBlock Text="{Binding UserInitial}"
                                                       FontFamily="Microsoft Sans Serif"
                                                       FontSize="12" FontWeight="Bold"
                                                       Foreground="White"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="{Binding Username}"
                                                   FontFamily="Microsoft Sans Serif"
                                                   FontSize="12" FontWeight="SemiBold"
                                                   Foreground="#37474F"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Role Badge -->
                        <DataGridTemplateColumn Header="Role" Width="130">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="10" Padding="12,5"
                                            HorizontalAlignment="Left" Margin="4,0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#E0F7FA"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Role}" Value="Admin">
                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <!-- Icon changes per role -->
                                            <Path Stretch="Uniform"
                                                  Width="12" Height="12"
                                                  Margin="0,0,6,0"
                                                  VerticalAlignment="Center">
                                                <Path.Style>
                                                    <Style TargetType="Path">
                                                        <!-- User icon default -->
                                                        <Setter Property="Data"
                                                                Value="M12,12 C14.21,12 16,10.21 16,8 C16,5.79 14.21,4 12,4 C9.79,4 8,5.79 8,8 C8,10.21 9.79,12 12,12 Z M12,14 C9.33,14 4,15.34 4,18 L4,20 L20,20 L20,18 C20,15.34 14.67,14 12,14 Z"/>
                                                        <Setter Property="Fill" Value="#00ACC1"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Role}" Value="Admin">
                                                                <Setter Property="Data"
                                                                        Value="M12,1 L15.09,7.26 L22,8.27 L17,13.14 L18.18,20.02 L12,16.77 L5.82,20.02 L7,13.14 L2,8.27 L8.91,7.26 L12,1 Z"/>
                                                                <Setter Property="Fill" Value="#2E7D32"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Path.Style>
                                            </Path>
                                            <TextBlock Text="{Binding Role}"
                                                       FontFamily="Microsoft Sans Serif"
                                                       FontSize="11" FontWeight="Bold"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#00838F"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Role}" Value="Admin">
                                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Options -->
                        <DataGridTemplateColumn Header="Actions" Width="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Background="Transparent" BorderThickness="0"
                                            Cursor="Hand" Focusable="False"
                                            Command="{Binding DataContext.SelectUserCommand,
                                                      RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="bg" Background="Transparent"
                                                        CornerRadius="6" Padding="8,4"
                                                        HorizontalAlignment="Left" Margin="10,0">
                                                    <StackPanel Orientation="Horizontal"
                                                                VerticalAlignment="Center">
                                                        <Path Data="M12,8 C10.9,8 10,8.9 10,10 C10,11.1 10.9,12 12,12 C13.1,12 14,11.1 14,10 C14,8.9 13.1,8 12,8 Z M12,14 C10.9,14 10,14.9 10,16 C10,17.1 10.9,18 12,18 C13.1,18 14,17.1 14,16 C14,14.9 13.1,14 12,14 Z M12,2 C10.9,2 10,2.9 10,4 C10,5.1 10.9,6 12,6 C13.1,6 14,5.1 14,4 C14,2.9 13.1,2 12,2 Z"
                                                              Fill="#90A4AE" Width="14" Height="14"
                                                              Stretch="Uniform" Margin="0,0,6,0"/>
                                                        <TextBlock Text="Options"
                                                                   FontFamily="Microsoft Sans Serif"
                                                                   FontSize="11.5" Foreground="#90A4AE"
                                                                   VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bg" Property="Background"
                                                                Value="#E0F7FA"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- ════════════════════════════════
             ROW 3 — Action Panel
             ════════════════════════════════ -->
        <Border Grid.Row="3"
                Visibility="{Binding IsActionPanelVisible, Converter={StaticResource BoolToVis}}"
                Background="White" CornerRadius="12"
                Margin="0,12,0,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="14" ShadowDepth="3"
                                  Opacity="0.10" Color="Black"/>
            </Border.Effect>

            <Grid Margin="18,12">
                <Grid.ColumnDefinitions>
                    <!-- Avatar -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Username Badge -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Role Badge -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Divider -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Edit -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Delete -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Spacer -->
                    <ColumnDefinition Width="*"/>
                    <!-- Close -->
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Avatar -->
                <Border Grid.Column="0"
                        Width="34" Height="34" CornerRadius="17"
                        Background="#00ACC1" Margin="0,0,10,0">
                    <TextBlock Text="{Binding SelectedUser.UserInitial}"
                               FontFamily="Microsoft Sans Serif"
                               FontSize="13" FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <!-- Username Badge -->
                <Border Grid.Column="1"
                        Background="#006064" CornerRadius="6"
                        Padding="12,6" Margin="0,0,8,0" MaxWidth="180">
                    <TextBlock Text="{Binding SelectedUser.Username}"
                               FontFamily="Microsoft Sans Serif"
                               FontSize="12" FontWeight="Bold"
                               Foreground="White" VerticalAlignment="Center"
                               TextTrimming="CharacterEllipsis"/>
                </Border>

                <!-- Role Badge -->
                <Border Grid.Column="2"
                        CornerRadius="6" Padding="12,6"
                        Margin="0,0,14,0">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#E0F7FA"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedUser.Role}" Value="Admin">
                                    <Setter Property="Background" Value="#E8F5E9"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="{Binding SelectedUser.Role}"
                               FontFamily="Microsoft Sans Serif"
                               FontSize="11.5" FontWeight="Bold"
                               VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#00838F"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedUser.Role}" Value="Admin">
                                        <Setter Property="Foreground" Value="#2E7D32"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Border>

                <!-- Divider -->
                <Rectangle Grid.Column="3"
                           Width="1" Fill="#E0E0E0"
                           Margin="0,4,14,4"/>

                <!-- Edit User -->
                <Button Grid.Column="4"
                        Style="{StaticResource ContextActionButton}"
                        Command="{Binding EditUserCommand}"
                        Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Path Data="M3,17.25 L3,21 L6.75,21 L17.81,9.94 L14.06,6.19 L3,17.25 Z M20.71,7.04 C21.1,6.65 21.1,6.02 20.71,5.63 L18.37,3.29 C17.98,2.9 17.35,2.9 16.96,3.29 L15.13,5.12 L18.88,8.87 L20.71,7.04 Z"
                              Fill="#00838F" Width="13" Height="13"
                              Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="Edit User" VerticalAlignment="Center"
                                   FontFamily="Microsoft Sans Serif"/>
                    </StackPanel>
                </Button>

                <!-- Delete User -->
                <Button Grid.Column="5"
                        Style="{StaticResource DeleteActionButton}"
                        Command="{Binding DeleteUserCommand}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Path Data="M6,19 C6,20.1 6.9,21 8,21 L16,21 C17.1,21 18,20.1 18,19 L18,7 L6,7 L6,19 Z M19,4 L15.5,4 L14.5,3 L9.5,3 L8.5,4 L5,4 L5,6 L19,6 L19,4 Z"
                              Fill="#E53935" Width="13" Height="13"
                              Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="Delete User" VerticalAlignment="Center"
                                   FontFamily="Microsoft Sans Serif"/>
                    </StackPanel>
                </Button>

                <!-- Close -->
                <Button Grid.Column="7"
                        Style="{StaticResource CloseButton}"
                        Command="{Binding CloseActionPanelCommand}"
                        Content="✕"/>
            </Grid>
        </Border>

    </Grid>
</UserControl>