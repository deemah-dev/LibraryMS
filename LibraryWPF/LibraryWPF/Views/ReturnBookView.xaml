<UserControl x:Class="LibraryWPF.Views.ReturnBookView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FontFamily="Microsoft Sans Serif"
             Background="Transparent"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <UserControl.Resources>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- ── Toggle Filter Button ── -->
        <Style x:Key="FilterToggle" TargetType="ToggleButton">
            <Setter Property="Height"          Value="36"/>
            <Setter Property="Background"      Value="#F4F6F8"/>
            <Setter Property="Foreground"      Value="#78909C"/>
            <Setter Property="FontFamily"      Value="Microsoft Sans Serif"/>
            <Setter Property="FontSize"        Value="12"/>
            <Setter Property="BorderThickness" Value="1.2"/>
            <Setter Property="BorderBrush"     Value="#CFD8DC"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="bg"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8" Padding="14,0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background"    Value="#E0F7FA"/>
                                <Setter TargetName="bg" Property="BorderBrush"   Value="#006064"/>
                                <Setter Property="Foreground" Value="#006064"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bg" Property="Background"    Value="#006064"/>
                                <Setter TargetName="bg" Property="BorderBrush"   Value="#006064"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ── DataGrid Column Header ── -->
        <Style x:Key="DGColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background"      Value="#006064"/>
            <Setter Property="Foreground"      Value="White"/>
            <Setter Property="FontFamily"      Value="Microsoft Sans Serif"/>
            <Setter Property="FontSize"        Value="11.5"/>
            <Setter Property="FontWeight"      Value="Bold"/>
            <Setter Property="Height"          Value="42"/>
            <Setter Property="Padding"         Value="12,0"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush"     Value="#00838F"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridColumnHeader">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ── DataGrid Row ── -->
        <Style x:Key="DGRow" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontFamily" Value="Microsoft Sans Serif"/>
            <Setter Property="FontSize"   Value="11.5"/>
            <Setter Property="Foreground" Value="#37474F"/>
            <Setter Property="Height"     Value="46"/>
            <Setter Property="Cursor"     Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0F7FA"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#B2EBF2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ── DataGrid Cell ── -->
        <Style x:Key="DGCell" TargetType="DataGridCell">
            <Setter Property="BorderThickness"  Value="0"/>
            <Setter Property="Padding"          Value="12,0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#006064"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ── Close Button ── -->
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Width"           Value="28"/>
            <Setter Property="Height"          Value="28"/>
            <Setter Property="Background"      Value="Transparent"/>
            <Setter Property="Foreground"      Value="#90A4AE"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Setter Property="FontSize"        Value="13"/>
            <Setter Property="FontWeight"      Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg" Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#FFEBEE"/>
                                <Setter Property="Foreground" Value="#EF5350"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ── Return Confirm Button ── -->
        <Style x:Key="ReturnButton" TargetType="Button">
            <Setter Property="Height"          Value="36"/>
            <Setter Property="Background"      Value="#006064"/>
            <Setter Property="Foreground"      Value="White"/>
            <Setter Property="FontFamily"      Value="Microsoft Sans Serif"/>
            <Setter Property="FontSize"        Value="12"/>
            <Setter Property="FontWeight"      Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8" Padding="18,0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#00838F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#004D40"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <!-- ═══════════════════════════════════════════════════════ -->
    <Grid>
        <Grid.RowDefinitions>
            <!-- Stats -->
            <RowDefinition Height="Auto"/>
            <!-- Toolbar / Filter -->
            <RowDefinition Height="Auto"/>
            <!-- DataGrid -->
            <RowDefinition Height="*"/>
            <!-- Action Panel -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ════════════════════════════════
             ROW 0 — Stats Cards
             ════════════════════════════════ -->
        <UniformGrid Grid.Row="0" Columns="3" Margin="0,0,0,14">

            <!-- Total Borrows -->
            <Border Background="White" CornerRadius="12"
                    Margin="0,0,10,0" Padding="16,12">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2"
                                      Opacity="0.07" Color="Black"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Total Borrows" FontSize="10.5" Foreground="#90A4AE"/>
                        <TextBlock Text="{Binding TotalBorrows}"
                                   FontSize="24" FontWeight="Bold"
                                   Foreground="#006064" Margin="0,2,0,0"/>
                    </StackPanel>
                    <Border Grid.Column="1" Width="40" Height="40"
                            CornerRadius="10" Background="#E0F7FA">
                        <Path Data="M20,6 L4,6 C2.9,6 2,6.9 2,8 L2,20 C2,21.1 2.9,22 4,22 L20,22 C21.1,22 22,21.1 22,20 L22,8 C22,6.9 21.1,6 20,6 Z M20,20 L4,20 L4,10 L20,10 L20,20 Z M16,1 L8,1 L8,3 L16,3 L16,1 Z"
                              Fill="#006064" Width="18" Height="18" Stretch="Uniform"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Not Returned -->
            <Border Background="White" CornerRadius="12"
                    Margin="5,0,5,0" Padding="16,12">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2"
                                      Opacity="0.07" Color="Black"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Not Returned" FontSize="10.5" Foreground="#90A4AE"/>
                        <TextBlock Text="{Binding TotalNotReturned}"
                                   FontSize="24" FontWeight="Bold"
                                   Foreground="#E53935" Margin="0,2,0,0"/>
                    </StackPanel>
                    <Border Grid.Column="1" Width="40" Height="40"
                            CornerRadius="10" Background="#FFEBEE">
                        <Path Data="M12,2 C6.48,2 2,6.48 2,12 C2,17.52 6.48,22 12,22 C17.52,22 22,17.52 22,12 C22,6.48 17.52,2 12,2 Z M13,17 L11,17 L11,15 L13,15 L13,17 Z M13,13 L11,13 L11,7 L13,7 L13,13 Z"
                              Fill="#E53935" Width="18" Height="18" Stretch="Uniform"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Total Fines -->
            <Border Background="White" CornerRadius="12"
                    Margin="10,0,0,0" Padding="16,12">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2"
                                      Opacity="0.07" Color="Black"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Total Fines" FontSize="10.5" Foreground="#90A4AE"/>
                        <TextBlock Text="{Binding TotalFines, StringFormat='${0:N2}'}"
                                   FontSize="24" FontWeight="Bold"
                                   Foreground="#F9A825" Margin="0,2,0,0"/>
                    </StackPanel>
                    <Border Grid.Column="1" Width="40" Height="40"
                            CornerRadius="10" Background="#FFF8E1">
                        <Path Data="M11.8,10.9 C9.53,10.31 8.8,9.7 8.8,8.75 C8.8,7.66 9.81,6.9 11.5,6.9 C13.28,6.9 13.94,7.75 14,9 L16.21,9 C16.14,7.28 15.09,5.7 13,5.19 L13,3 L10,3 L10,5.16 C8.06,5.58 6.5,6.84 6.5,8.77 C6.5,11.08 8.41,12.23 11.2,12.9 C13.7,13.5 14.2,14.38 14.2,15.31 C14.2,16 13.71,17.1 11.5,17.1 C9.44,17.1 8.63,16.18 8.52,15 L6.32,15 C6.44,17.19 8.08,18.42 10,18.83 L10,21 L13,21 L13,18.85 C14.95,18.48 16.5,17.35 16.5,15.3 C16.5,12.46 14.07,11.49 11.8,10.9 Z"
                              Fill="#F9A825" Width="18" Height="18" Stretch="Uniform"/>
                    </Border>
                </Grid>
            </Border>

        </UniformGrid>

        <!-- ════════════════════════════════
             ROW 1 — Toolbar / Filter
             ════════════════════════════════ -->
        <Border Grid.Row="1"
                Background="White" CornerRadius="12"
                Padding="16,12" Margin="0,0,0,12">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2"
                                  Opacity="0.07" Color="Black"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Filter Label -->
                <TextBlock Grid.Column="0"
                           Text="Filter:"
                           FontFamily="Microsoft Sans Serif"
                           FontSize="12" Foreground="#78909C"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>

                <!-- Toggle: Show Unreturned Only -->
                <ToggleButton Grid.Column="1"
                              Style="{StaticResource FilterToggle}"
                              IsChecked="{Binding ShowUnreturnedOnly}"
                              Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal" Margin="14,0">
                        <Path Data="M12,2 C6.48,2 2,6.48 2,12 C2,17.52 6.48,22 12,22 C17.52,22 22,17.52 22,12 C22,6.48 17.52,2 12,2 Z M13,17 L11,17 L11,15 L13,15 L13,17 Z M13,13 L11,13 L11,7 L13,7 L13,13 Z"
                              Fill="{Binding Foreground,
                                     RelativeSource={RelativeSource AncestorType=ToggleButton}}"
                              Width="13" Height="13" Stretch="Uniform"
                              Margin="0,0,7,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Not Returned Only"
                                   VerticalAlignment="Center"
                                   FontFamily="Microsoft Sans Serif"/>
                    </StackPanel>
                </ToggleButton>

                <!-- Records count -->
                <TextBlock Grid.Column="2"
                           Text="{Binding FilteredCount, StringFormat='{}{0} records'}"
                           FontFamily="Microsoft Sans Serif"
                           FontSize="11" Foreground="#90A4AE"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Margin="0,0,0,0"/>

            </Grid>
        </Border>

        <!-- ════════════════════════════════
             ROW 2 — DataGrid
             ════════════════════════════════ -->
        <Border Grid.Row="2"
                Background="White" CornerRadius="12"
                ClipToBounds="True">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2"
                                  Opacity="0.07" Color="Black"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Table Header Bar -->
                <Border Grid.Row="0"
                        Background="#006064"
                        CornerRadius="12,12,0,0"
                        Padding="18,12">
                    <TextBlock Text="Borrow Records"
                               FontFamily="Microsoft Sans Serif"
                               FontSize="13" FontWeight="Bold"
                               Foreground="White" VerticalAlignment="Center"/>
                </Border>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding FilteredBorrows}"
                          SelectedItem="{Binding SelectedBorrow}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="False"
                          CanUserResizeRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#F0F0F0"
                          BorderThickness="0"
                          Background="White"
                          RowBackground="White"
                          AlternatingRowBackground="#FAFFFE"
                          ColumnHeaderStyle="{StaticResource DGColumnHeader}"
                          RowStyle="{StaticResource DGRow}"
                          CellStyle="{StaticResource DGCell}"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          FontFamily="Microsoft Sans Serif">

                    <DataGrid.Columns>

                        <!-- Borrow ID -->
                        <DataGridTextColumn Header=" ID"
                                            Binding="{Binding BorrowId}"
                                            Width="60"/>

                        <!-- Username -->
                        <DataGridTextColumn Header="Username"
                                            Binding="{Binding Username}"
                                            Width="130"/>

                        <!-- Borrow Date -->
                        <DataGridTextColumn Header="Borrow Date"
                                            Binding="{Binding BorrowDate, StringFormat='dd MMM yyyy'}"
                                            Width="115"/>

                        <!-- Due Date -->
                        <DataGridTemplateColumn Header="Due Date" Width="115">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DueDate, StringFormat='dd MMM yyyy'}"
                                               FontFamily="Microsoft Sans Serif"
                                               FontSize="11.5" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#37474F"/>
                                                <Style.Triggers>
                                                    <!-- Overdue and not returned -->
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding IsOverdue}"  Value="True"/>
                                                            <Condition Binding="{Binding IsReturned}" Value="False"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Foreground" Value="#E53935"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Is Returned Badge -->
                        <DataGridTemplateColumn Header="Status" Width="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="10" Padding="10,4"
                                            HorizontalAlignment="Left" Margin="8,0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#FFEBEE"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsReturned}" Value="True">
                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Ellipse Width="7" Height="7" Margin="0,0,6,0">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Setter Property="Fill" Value="#E53935"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsReturned}" Value="True">
                                                                <Setter Property="Fill" Value="#2E7D32"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>
                                            <TextBlock FontFamily="Microsoft Sans Serif"
                                                       FontSize="11" FontWeight="Bold"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text"       Value="Not Returned"/>
                                                        <Setter Property="Foreground" Value="#C62828"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsReturned}" Value="True">
                                                                <Setter Property="Text"       Value="Returned"/>
                                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Actual Return Date -->
                        <DataGridTemplateColumn Header="Return Date" Width="115">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock FontFamily="Microsoft Sans Serif"
                                               FontSize="11.5" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text"       Value="—"/>
                                                <Setter Property="Foreground" Value="#B0BEC5"/>
                                            </Style>
                                        </TextBlock.Style>
                                        <TextBlock.Text>
                                            <Binding Path="ActualReturnDate"
                                                     StringFormat="dd MMM yyyy"
                                                     TargetNullValue="—"/>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Fines Badge -->
                        <DataGridTemplateColumn Header="Fines" Width="90">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="10" Padding="10,4"
                                            HorizontalAlignment="Left" Margin="8,0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#F4F6F8"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasFine}" Value="True">
                                                        <Setter Property="Background" Value="#FFF8E1"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding Fines, StringFormat='${0:N2}'}"
                                                   FontFamily="Microsoft Sans Serif"
                                                   FontSize="11" FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#90A4AE"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasFine}" Value="True">
                                                            <Setter Property="Foreground" Value="#F57F17"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Options -->
                        <DataGridTemplateColumn Header="Actions" Width="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Background="Transparent" BorderThickness="0"
                                            Cursor="Hand" Focusable="False"
                                            Command="{Binding DataContext.SelectBorrowCommand,
                                                      RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="bg" Background="Transparent"
                                                        CornerRadius="6" Padding="8,4"
                                                        HorizontalAlignment="Left" Margin="8,0">
                                                    <StackPanel Orientation="Horizontal"
                                                                VerticalAlignment="Center">
                                                        <Path Data="M12,8 C10.9,8 10,8.9 10,10 C10,11.1 10.9,12 12,12 C13.1,12 14,11.1 14,10 C14,8.9 13.1,8 12,8 Z M12,14 C10.9,14 10,14.9 10,16 C10,17.1 10.9,18 12,18 C13.1,18 14,17.1 14,16 C14,14.9 13.1,14 12,14 Z M12,2 C10.9,2 10,2.9 10,4 C10,5.1 10.9,6 12,6 C13.1,6 14,5.1 14,4 C14,2.9 13.1,2 12,2 Z"
                                                              Fill="#90A4AE" Width="14" Height="14"
                                                              Stretch="Uniform" Margin="0,0,6,0"/>
                                                        <TextBlock Text="Options"
                                                                   FontFamily="Microsoft Sans Serif"
                                                                   FontSize="11.5" Foreground="#90A4AE"
                                                                   VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bg" Property="Background"
                                                                Value="#E0F7FA"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- ════════════════════════════════
             ROW 3 — Action Panel
             ════════════════════════════════ -->
        <Border Grid.Row="3"
                Visibility="{Binding IsActionPanelVisible, Converter={StaticResource BoolToVis}}"
                Background="White" CornerRadius="12"
                Margin="0,12,0,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="14" ShadowDepth="3"
                                  Opacity="0.10" Color="Black"/>
            </Border.Effect>

            <Grid Margin="18,12">
                <Grid.ColumnDefinitions>
                    <!-- Borrow ID Badge -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Username Badge -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Divider -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Fines info -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Divider -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Return Button -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Spacer -->
                    <ColumnDefinition Width="*"/>
                    <!-- Close -->
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Borrow ID -->
                <Border Grid.Column="0"
                        Background="#006064" CornerRadius="6"
                        Padding="12,6" Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="# "
                                   FontFamily="Microsoft Sans Serif"
                                   FontSize="11" Foreground="#B2EBF2"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding SelectedBorrow.BorrowId}"
                                   FontFamily="Microsoft Sans Serif"
                                   FontSize="12" FontWeight="Bold"
                                   Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Username -->
                <Border Grid.Column="1"
                        Background="#E0F7FA" CornerRadius="6"
                        Padding="12,6" Margin="0,0,14,0">
                    <TextBlock Text="{Binding SelectedBorrow.Username}"
                               FontFamily="Microsoft Sans Serif"
                               FontSize="12" FontWeight="Bold"
                               Foreground="#006064" VerticalAlignment="Center"/>
                </Border>

